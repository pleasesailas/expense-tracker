<div class="row">
  <div class="col-6 mx-auto">
    <div class="card card-body mt-4">
      <h1 class="text-center mt-2 mb-4">Register</h1>
      {{> message}}
      <form action="/users/register" method="POST">
        <div class="mt-3">
          <label for="name" class="form-label" style="font-size: 1.5em;">Name</label>
          <input type="text" name="name" id="name" class="form-control" placeholder="Enter your name"
            value="{{ name }}">
        </div>
        <div class="mt-3">
          <label for="email" class="form-label" style="font-size: 1.5em;">Email</label>
          <input type="email" name="email" id="email" class="form-control" placeholder="Enter your email" value="{{ email }}">
        </div>
        <div class="mt-3">
          <label for="password" class="form-label" style="font-size: 1.5em;">Password</label>
          <input type="password" name="password" id="password" class="form-control" placeholder="Enter your password" value="{{ password }}">
        </div>
        <div class="mt-3">
          <label for="confirmPassword" class="form-label" style="font-size: 1.5em;">confirmPassword</label>
          <input type="password" name="confirmPassword" id="confirmPassword" class="form-control"
            placeholder="Confirm your password" value="{{ confirmPassword }}">
        </div>
        <button type="submit" class="btn btn-success w-100 mt-4" style="font-size: 1.5em;">Register</button>
      </form>
      <a href="/auth/facebook" class="btn btn-info w-100 mt-3" style="font-size: 1.4em;">Facebook Login</a>
      <p class="mt-3" style="font-size:1.5em;">
        Have Account? <a href="/users/login">Login</a>
      </p>
    </div>
  </div>
</div>