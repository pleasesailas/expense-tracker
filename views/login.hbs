<div class="row">
  <div class="col-6 mx-auto">
    <div class="card card-body mt-5">
      <h1 class="text-center mt-2 mb-4">Login</h1>
      {{> message}}
      <form action="/users/login" method="POST">
        <div class="mt-1">
          <label for="email" class="form-label" style="font-size: 1.5em;">Email</label>
          <input type="text" name="email" class="form-control" id="email" placeholder="Enter your Email here" value="{{ email }}">
        </div>
        <div class="mt-3">
          <label for="password" class="form-label" style="font-size: 1.5em;">Password</label>
          <input type="password" name="password" class="form-control" id="password" placeholder="Enter your password" value="{{ password }}">
        </div>
        <button type="submit" class="btn btn-primary w-100 mt-4" style="font-size: 1.5em;">Login</button>
      </form>
      <a href="/auth/facebook" class="btn btn-info w-100 mt-3" style="font-size: 1.4em;">Facebook Login</a>
      <p class="mt-3" style="font-size: 1.5em;">
        Have Account? <a href="/users/register" >Register</a>
      </p>
    </div>
  </div>
</div>