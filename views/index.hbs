<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card card-body mt-3">
        <select class="form-select mb-3" style="width: 70%;" aria-label=".form-select example">
          <option selected>類別</option>
          <option value="1">One</option>
          <option value="2">Two</option>
          <option value="3">Three</option>
        </select>
        <div class="mt-3 ms-1" style="font-size:24px;">總金額：</div>
        <div class="d-flex justify-content-center mb-3" style="font-size: 70px; color:rgb(255, 115, 0)">25260</div>
        <ul class="list-group">
          {{#each test}}
          <div class="d-flex justify-content-between align-items-center">
            <li class="list-group-item list-group-item-primary d-flex justify-content-start" style="width: 420px; border: none;">
              <div><i class="{{ this.icon }} p-4 me-2" style="transform: scale(3);"></i></div>
              <div class="flex-grow-1 flex">
                <div class="" style="font-size: 1.8em;">{{ this.name }}</div>
                <div>{{ this.date }}</div>

              </div>
              <div class="d-flex justify-content-end" style="font-size: 1.8em;">{{ this.cost }}</div>
            </li>
            <div class="d-flex justify-content-center">
              <a href="" class="btn btn-outline-primary">修改</a>
            </div>
            <form action="">
              <button type="submit" class="btn btn-outline-danger">刪除</button>
            </form>
          </div>
          {{/each}}
        </ul>
        <div class="d-flex justify-content-center mt-3">
          <a href="" class="btn mt-3 w-50" style="font-size: 1.2em;background-color:rgb(255, 132, 0); color:white">新增支出</a>
        </div>
        
      </div>
    </div>
  </div>
</div>