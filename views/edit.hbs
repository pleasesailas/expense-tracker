<div class="row mt-5">
  <div class="col-6 mx-auto mt-4">
    <div class="card card-body">
      <div class="d-flex">
        <h3 class="m-auto mt-1">請修改你的支出</h3>
      </div>
      <form action="/records/{{ record._id }}?_method=PUT" method="POST" class="mt-3">
        <div class="d-flex mt-3">
          <label for="name" class="d-flex justify-content-end form-label me-5 mt-2" class=""
            style="width: 30%;">名稱*:</label>
          <input type="text" name="name" id="name" class="form-control me-5" value="{{ record.name }}">
        </div>
        <div class="d-flex mt-3">
          <label for="date" class="d-flex justify-content-end form-label me-5 mt-2" class=""
            style="width: 30%;">日期*:</label>
          <input type="date" name="date" id="date" class="form-control me-5" value="{{ record.date }}">
        </div>
        <div class="d-flex mt-3">
          <label for="category" class="d-flex justify-content-end form-label me-5 mt-2" style="width: 30%;">類別*:</label>
          <select class="form-select me-5" aria-label=".form-select category" name="category"
            value="{{ record.category }}">
            {{#each categories}}
            <option {{#if this.isSelected}} selected {{/if}} value="{{ this.name }}">{{ this.name }}</option>
            {{/each}}
          </select>
        </div>
        <div class="d-flex mt-3">
          <label for="amount" class="d-flex justify-content-end form-label me-5 mt-2" class=""
            style="width: 30%;">金額*:</label>
          <input type="number" name="amount" id="amount" class="form-control me-5" value="{{ record.amount }}">
        </div>
        <div class="d-flex justify-content-center ms-3">
          <button type="submit" class="btn btn-primary mt-4" style="font-size:1.2em;width: 50%;">送出</button>
        </div>
      </form>
    </div>
  </div>
</div>